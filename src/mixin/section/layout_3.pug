mixin layout_3(json)
	<!-- Layout 3 : BEGIN -->
	<!-- 1 Column Text + Button : BEGIN -->
	<tr>
		<td style="background-color: #008BB0;">
			<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
				<tr>
					<td style="padding: 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #ffffff;">
						p(
							style='margin: 0'
						) !{json.text}
					</td>
				</tr>
				<tr>
					<td style="padding: 0 20px 20px;">
						<!-- Button : BEGIN -->
						<table align="left" role="presentation" cellspacing="0" cellpadding="0" border="0">
							<tr>
								<td class="button-td button-td-primary" style="background: #002A5C;">
									a.button-a.button-a-primary(
										href="##TrackClick##" + json.link,
										style='background: #002a5c; border: 1px solid #002a5c; font-weight: bold; font-family: sans-serif; font-size: 16px; line-height: 16px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; text-transform: uppercase'
									) !{json.link_text}
								</td>
							</tr>
						</table>
						<!-- Button : END -->
					</td>
				</tr>

			</table>
		</td>
	</tr>
	<!-- 1 Column Text + Button : END -->
	<!-- Layout 3 : END -->
