mixin header(title)
	if !title
		- var title = "Need title"
	tr
		td(
			style='background-color: #ffffff; padding: 0 10px'
		)
			table(
				role='presentation',
				cellspacing='0',
				cellpadding='0',
				border='0',
				width='100%'
			)
				tr 
					td(
						valign='top',
						style='text-align: center; padding-bottom: 20px; padding-top: 10px; font-family: Arial; background-color: #ffffff; border-bottom: 1px solid #002a5c'
					)
						a(
							href='##HTMLNewsletterURL##',
							style='text-decoration: none !important; color: #000000; font-size: 12px'
						)
							strong
								| View this email online
				tr
					td(
						valign='top',
						style='text-align: center; padding-bottom: 10px; padding-top: 10px; color: #002a5c; font-size: 14px; line-height: 14px; font-family: arial; background-color: #ffffff; border-bottom: 1px solid #002a5c'
					)
						strong
							| #{title}
				tr
					td(
						style='text-align: center; padding: 20px 30px',
						width='100%',
						valign='top'
					)
						a(
							href='##TrackClick##https://www.dentistry.utoronto.ca/',
							target='_blank',
							style='color: #007fa3'
						)
							img(
								src='https://adcomms.utoronto.ca/email-templates/dentistry/2020/04/Dentistry.jpg',
								style='border: 0 !important; width: 100%; height: auto',
								alt='University of Toronto, Faculty of Dentistry Logo'
							)
