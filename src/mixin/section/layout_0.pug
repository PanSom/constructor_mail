mixin layout_0(json)
	<!-- 1 Column Text + Button : BEGIN -->
	<tr>
		<td style="background-color: #ffffff;">
			<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
				<tr>
					<td style="padding: 20px 20px 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #000000;">
						p(
							style='margin: 0'
						) !{json.text}
					</td>
				</tr>
				<tr>
					<td style="padding: 0 20px 20px;">
						<!-- Button : BEGIN -->
						<table role="presentation" cellspacing="0" cellpadding="0" border="0" class="center-on-narrow" style="float:left;">
							<tr>
								<td class="button-td button-td-primary" style="background: #78BE20;">
									a.button-a.button-a-primary(
										href="##TrackClick##" + json.link,
										style='background: #78be20; border: 1px solid #78be20; font-weight: bold; font-family: sans-serif; font-size: 16px; line-height: 16px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; text-transform: uppercase'
									) !{json.link_text}
								</td>
							</tr>
						</table>
						<!-- Button : END -->
					</td>
				</tr>

			</table>
		</td>
	</tr>
	<!-- 1 Column Text + Button : END -->
